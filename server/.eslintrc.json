{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base", "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint", "prettier"
    ],
    "rules": {
      "import/extensions": "off",
      "prettier/prettier": ["error"]
    },
    "settings": {
        "import/resolver": {
          "typescript": {},
          "node": {
            "extensions": [".ts", ".tsx"],
            "moduleDirectory": ["src", "node_modules"]
          }
        }
      }
}
